<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-6 offset-md-3">
      <h1>Write a review</h1>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5, prompt: 'Number of stars', selected: 3 %>
        <%= f.submit "Post review", class: "btn btn-primary" %>
      <% end %>
      <br>
      <%= link_to "Back", restaurants_path(@restaurant) %>
    </div>
  </div>
</div>
